{
  "name": "findbook",
  "version": "1.0.0",
  "description": "A modern Angular application for discovering and exploring books",
  "author": "Ben Holsinger",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bholsinger09/FindBook.git"
  },
  "homepage": "https://bholsinger09.github.io/FindBook",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:analyze": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/findbook-app/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:unit": "ng test --watch=false",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "e2e:dev": "concurrently \"npm start\" \"cypress open\"",
    "test:all": "npm run test:unit && npm run e2e",
    "deploy:gh": "ng build --configuration production --base-href=/FindBook/ && npx angular-cli-ghpages --dir=dist/findbook-app/browser",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "npm run build:prod && netlify deploy --prod --dir=dist/findbook-app"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.2",
    "@angular/cdk": "^20.2.5",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.5",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "angular-cli-ghpages": "^2.0.3",
    "concurrently": "^9.2.1",
    "cypress": "^15.3.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-safari-launcher": "^1.0.0",
    "typescript": "~5.9.2",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
